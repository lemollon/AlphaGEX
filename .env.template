# AlphaGEX Configuration
# Copy this to .env and fill in your actual values

# ============================================================================
# DATABASES
# ============================================================================
# Main AlphaGEX database (for GEX data, trades, etc.)
DATABASE_URL=postgresql://user:password@host:5432/alphagex

# ORAT Options Database (REQUIRED for KRONOS backtester)
# This is a SEPARATE database containing historical ORAT options data
# Used exclusively by the KRONOS 0DTE backtester
# If not set, KRONOS will fall back to DATABASE_URL
ORAT_DATABASE_URL=postgresql://user:password@host:5432/orat_db

# ============================================================================
# Trading Volatility API (REQUIRED for GEX data)
# ============================================================================
TRADING_VOLATILITY_API_KEY=your_trading_volatility_api_key_here
# OR use username:
# TV_USERNAME=your_username_here

# ============================================================================
# Polygon.io API (optional - for additional market data)
# ============================================================================
POLYGON_API_KEY=your_polygon_api_key_here

# ============================================================================
# Tradier API (REQUIRED for live options data and trading)
# ============================================================================
TRADIER_API_KEY=your_tradier_api_key_here
TRADIER_ACCOUNT_ID=your_account_id_here
TRADIER_SANDBOX=false
# Set TRADIER_SANDBOX=true for paper trading

# ============================================================================
# Anthropic Claude API (optional - for AI features)
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
